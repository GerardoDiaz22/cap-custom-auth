                    <FlexBox id="panelLayout" height="100%" alignItems="Center" justifyContent="Center">
                    <VBox id="subPanelLayout" alignItems="Center">
                        <HBox id="userInfo" class="sapUiTinyMarginBottom">
                            <Title  id="usernameText" text="{ path: 'user>/username', targetType: 'any' }"/>
                            <Title  id="userInitialsText" text="{ path: 'initials>/initials', targetType: 'any' }"/>
                            <Label id="userSeparator" text="-" class="sapUiTinyMarginBeginEnd"/>
                            <Title  id="rolesText" text="{ path: 'user>/roles', targetType: 'any', formatter: '.formatRoles' }"/>
