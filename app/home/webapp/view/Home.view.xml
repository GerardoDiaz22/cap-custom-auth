            <Title id="appsTitle" text="Applications" class="sapUiMediumMarginTop sapUiSmallMarginBottom sapUiMediumMarginBegin"></Title>
            <f:GridContainer id="gridContainerApp" class="sapUiMediumMarginBegin" items="{tiles>/apps}">
                <f:layout>
                    <f:GridContainerSettings id="gridSettingStandardApp" rowSize="5rem" columnSize="5rem" gap="1rem" />
                </f:layout>
                <f:layoutS>
                    <f:GridContainerSettings id="gridSettingSmallApp" rowSize="4rem" columnSize="4rem" gap="0.5rem" />
                </f:layoutS>
                <f:items>
                    <GenericTile
                    id="genericGridTileApp"
                    header="{ path: 'tiles>name' }"
                    press="onPressAppTile">
                        <layoutData>
                            <f:GridContainerItemLayoutData id="gridLayoutApp" rows="2" columns="2" />
                        </layoutData>
                    </GenericTile>
                </f:items>
            </f:GridContainer>
            <Title id="servicesTitle" text="Services" class="sapUiMediumMarginTop sapUiSmallMarginBottom sapUiMediumMarginBegin"></Title>
            <f:GridContainer id="gridContainerSrv" class="sapUiMediumMarginBegin" items="{tiles>/services}">
                <f:layout>
                    <f:GridContainerSettings id="gridSettingStandardSrv" rowSize="5rem" columnSize="5rem" gap="1rem" />
                </f:layout>
                <f:layoutS>
                    <f:GridContainerSettings id="gridSettingSmallSrv" rowSize="4rem" columnSize="4rem" gap="0.5rem" />
                </f:layoutS>
                <f:items>
                    <GenericTile
                    id="genericGridTileSrv"
                    header="{ path: 'tiles>name' }"
                    press="onPressSrvTile">
                        <layoutData>
                            <f:GridContainerItemLayoutData id="gridLayoutSrv" rows="2" columns="2" />
                        </layoutData>
                    </GenericTile>
                </f:items>
            </f:GridContainer>
        </content>
    </Page>
</mvc:View>
