<mvc:View controllerName="sofos.users.management.usersmanagement.controller.Users" displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" showHeader="false">
        <Table id="idUsersTable" inset="false" items="{
			path: '/Users'
		}">
            <headerToolbar>
                <OverflowToolbar>
                    <content>
                        <Title text="Users" level="H2"/>
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <Text text="Name"/>
                </Column>
                <Column>
                    <Text text="Email"/>
                </Column>
                <Column>
                    <Text text="Roles"/>
                </Column>
                <Column>
                    <Text text="Workstations"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <ObjectIdentifier title="{username}" text="{ID}"/>
                    </cells>
                    <cells>
                        <Text text="{email}"/>
                    </cells>
                    <cells>
                        <Text text="{ path: 'roles', mode : 'OneTime', targetType: 'any', formatter: '.formatRoles' }"/>
                    </cells>
                    <cells>
                        <Text text="{workstation}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
