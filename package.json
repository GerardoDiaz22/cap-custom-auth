{
  "name": "sap-jwt",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^6",
    "@sap/cds-dk": "^6.7.1",
    "bcrypt": "^5.1.0",
    "cds-dbm": "~0.0.36",
    "cds-pg": "^0.0.51",
    "cookie-parser": "^1.4.6",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4",
    "jsonwebtoken": "^9.0.0",
    "mime": "^3.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.108.3",
    "sqlite3": "^5.0.4"
  },
  "scripts": {
    "builddb": "npx cds-dbm build",
    "deploycreatedb": "npx cds-dbm deploy --create-db",
    "cargarCSV": "npx cds-dbm load --via full",
    "deploydb": "npx cds-dbm deploy",
    "start": "npx cds run",
    "start:docker": "docker-compose up",
    "build:cf": "mbt build",
    "deploy:cf": "cf deploy mta_archives/devtoberfest_1.0.0.mtar"
  },
  "engines": {
    "node": "^16.15"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "sapux": [
    "app/products-worklist",
    "app/sales",
    "app/sofognd002"
  ],
  "cds": {
    "build": {
      "tasks": [
        {
          "use": "node-cf",
          "for": "node-cf",
          "src": "srv"
        },
        {
          "use": "postgres-cf",
          "for": "postgres-cf",
          "src": "db",
          "options": {
            "deployCmd": "npx cds-dbm deploy --load-via delta --auto-undeploy"
          }
        }
      ]
    },
    "requires": {
      "auth": {
        "impl": "./auth/handler.js"
      },
      "db": {
        "kind": "database"
      },
      "database": {
        "dialect": "plain",
        "impl": "cds-pg",
        "model": [
          "srv"
        ]
      }
    },
    "migrations": {
      "db": {
        "schema": {
          "default": "public",
          "clone": "_cdsdbm_clone",
          "reference": "_cdsdbm_ref"
        },
        "deploy": {
          "tmpFile": "tmp/_autodeploy.json",
          "undeployFile": "db/undeploy.json"
        }
      }
    }
  }
}
